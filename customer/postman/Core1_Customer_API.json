  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set common variables",
          "pm.globals.set('timestamp', new Date().getTime());"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Common tests for all requests",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Content-Type is application/json', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});",
          "",
          "// Parse response for success/error handling",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    pm.test('Response has success property', function () {",
          "        const responseJson = pm.response.json();",
          "        pm.expect(responseJson).to.have.property('success');",
          "    });",
          "}",
          "",
          "// Auto-save customer ID from registration/login",
          "if (pm.info.requestName.includes('Register') || pm.info.requestName.includes('Login')) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson.success && responseJson.customer) {",
          "        pm.globals.set('customerId', responseJson.customer.id);",
          "    }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
